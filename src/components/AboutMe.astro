---
import type { App } from "../env";
import i18next, { t } from "i18next";
// code written here in the frontmatter of an astro component is only used during compile time -
// it is fenced in between --- and will never leak into frontend! thats why expensive and sensitive
// stuff can also be done here without problems!
import Card from "@components/Card/index.astro";

const { locale } = Astro.locals as App.Locals;
---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-4"
  title={t("aboutMe.title")}
  contentShouldScroll
>
  <div class="gap-2">
    <p class="text-sm font-light">{t("aboutMe.paragraph1")}</p>
    <p class="text-sm font-light">{t("aboutMe.paragraph2")}</p>
  </div>
</Card>

---
interface Props {
  rounded?: boolean;
}

const { rounded } = Astro.props;
---

<button
  class={`custom-btn text-xl max-h-[50px] shadow-custom shadow-primary-500 active:shadow-none active:translate-x-[3px] active:translate-y-[3px] dark:text-gray-200 light:text-gray-700 px-5 py-2 border border-primary-500 hover:text-primary-500 transition-colors duration-100 ease-in-out dark:bg-gray-900 light:bg-gray-100 cursor-pointer ${
    rounded ? "rounded-full" : "rounded-lg"
  }`}
>
  <slot />
</button>

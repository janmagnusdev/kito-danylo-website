---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import EducationLabel from "@components/EducationLabel.astro";
import { LINKS } from "@lib/constants";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import LanguageSwitcher from "./i18n/LanguageSwitcher.astro";
import { t } from "i18next";
import { type App } from "../env";

const { locale } = Astro.locals as App.Locals;
const targetLocale = locale === "de" ? "en" : "de";
---

<Card class="intro-card">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <div>
          <h6 class="text-sm font-light m-0 text-gray-500">{t("welcome")}</h6>
          <p class="m-0 font-light text-xl">
            {t("introCard.hi")}
            <b class="font-bold">Kito Danylo</b>. {t("introCard.hi2")}
          </p>
        </div>
        <div
          class="flex flex-row items-center mt-2 md:w-[120%] md:overflow-visible"
        >
          <Icon
            name="ri:medal-2-fill"
            class="text-size-4xl flex-basis-5xl flex-none mr-4"
          />
          <div
            class="flex flex-row flex-wrap gap-1 justify-start items-stretch text-xs text-align-left"
          >
            <EducationLabel>Diplom Sport- und Gesundheitscoach</EducationLabel>
            <EducationLabel>Athletik- und Performancetrainer</EducationLabel>
            <EducationLabel>Rehatrainer</EducationLabel>
            <EducationLabel>Yoga, Stress- und Mentalcoach</EducationLabel>
            <EducationLabel>Ern√§hrungsberater</EducationLabel>
          </div>
        </div>
      </div>
      <div class="flex gap-4 flex-wrap">
        <a
          href={LINKS.instagram}
          aria-label="instagram profile"
          target="_blank"
        >
          <Button aria-label="instagram profile">
            <Icon name="ri:instagram-fill" class="h-7" />
            <span class="sr-only">Instagram Profile</span>
          </Button>
        </a>
        <a href={LINKS.xing} aria-label="xing profile" target="_blank">
          <Button aria-label="github profile">
            <Icon name="ri:xing-fill" class="h-7" />
            <span class="sr-only">Xing Profile</span>
          </Button>
        </a>
        <a href={LINKS.email} aria-label="mail profile" target="_blank">
          <Button class="min-h-fit" aria-label="mail profile">
            <span class="flex flex-row items-center justify-between"
              >{t("introCard.action")}
              <Icon name="ri:mail-fill" class="ml-2" /></span
            >
          </Button>
        </a>
      </div>
      <LanguageSwitcher targetLanguage={targetLocale} originLanguage={locale} />
    </div>
    <Image
      width="300"
      height="300"
      src="/kito-avatar.png"
      class="w-auto max-h-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
      alt="Avatar Foto of Kito Danylo"
    />
  </div>
</Card>

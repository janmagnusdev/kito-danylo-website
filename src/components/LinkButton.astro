---
interface Props {
  link: string;
}

const { link } = Astro.props;
---

<a
  href={link}
  class=`
  dark:bg-neutral-900
  dark:hover:bg-neutral-800
  dark:text-white
  light:text-black
  light:bg-neutral-100
  light:hover:bg-neutral-50
  hover:decoration-underline
  px-4
  py-2
  border-1
  border-solid
  max-w-fit
  border-neutral-600
  rounded-lg
  mb-8`
>
  <slot />
</a>
